{
  "name": "claude-usage-widget",
  "version": "1.4.0",
  "description": "Desktop widget for Claude.ai usage monitoring",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:debug": "cross-env DEBUG_AUTH=1 electron .",
    "start:debug:dev": "cross-env DEBUG_AUTH=1 NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dev": "cross-env NODE_ENV=development electron ."
  },
  "keywords": [
    "claude",
    "usage",
    "widget",
    "electron"
  ],
  "author": "Slavomir Durej",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.claudeusage.widget",
    "productName": "Claude Usage Widget",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.md"
    ]
  }
}
