{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist-renderer",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist-renderer/.tsbuildinfo",
    "types": ["vite/client"]
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/shared/**/*.ts"
  ]
}
